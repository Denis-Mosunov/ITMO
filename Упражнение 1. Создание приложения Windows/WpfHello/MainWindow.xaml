<Window x:Class="WpfHello.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfHello"
        mc:Ignorable="d"
        Title="MainWindow" Height="299" Width="276" MinHeight="350" MinWidth="300" Closing="Window_Closing">
    <Grid>
        <Menu HorizontalAlignment="Left" VerticalAlignment="Top">
            <MenuItem Header="File">
                <MenuItem Header="Exit" Click="MenuItem_Click"/>
            </MenuItem>
        </Menu>
        <Label x:Name="lbl" HorizontalAlignment="Center" VerticalAlignment="Top">Пуск</Label>
        <Button x:Name="setBut" Content="Set Name" HorizontalAlignment="Left" Margin="38,46,0,0" VerticalAlignment="Top" Click="setBut_Click"/>
        <TextBox x:Name="setText" HorizontalAlignment="Left" Margin="140,48,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="setText_TextChanged"/>
        <Button x:Name="retBut" Content="Ret Name" HorizontalAlignment="Left" Margin="38,91,0,0" VerticalAlignment="Top" Click="retBut_Click"/>
        <Label x:Name="retLabel" Content="" HorizontalAlignment="Left" Margin="140,88,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
